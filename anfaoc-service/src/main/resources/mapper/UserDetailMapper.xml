<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="wzy.graduate.project.anfaoc.service.dao.UserDetailDao">

    <resultMap id="userDetailMap" type="wzy.graduate.project.anfaoc.api.domain.UserDetail">
        <id property="id" column="id"/>
        <result property="userName" column="user_name"/>
        <result property="userPassword" column="user_password"/>
        <result property="userAge" column="user_age"/>
        <result property="userAuthority" column="user_authority"/>
        <result property="phoneNumber" column="phone_number"/>
    </resultMap>

    <sql id="table_name">
        user_detail
    </sql>

    <select id="findAllUser" resultMap="userDetailMap">
        SELECT *
        FROM <include refid="table_name"/>
        ORDER BY `id` DESC;
    </select>

    <select id="findUserByPhoneNumber" parameterType="string" resultType="int">
        SELECT count(1)
        FROM <include refid="table_name"/>
        WHERE `phone_number` = #{phoneNumber}
    </select>

</mapper>